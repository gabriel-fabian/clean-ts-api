{
  "name": "clean-ts-api",
  "version": "0.7.0",
  "description": "NodeJs Rest API and GraphQL using TDD, Clean Architecture, Typescript and Design Patterns",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "dev": "npm run build && tsc-watch --onSuccess \"npm run debug\"",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --silent --coverage=false --noStackTrace",
    "test:integration": "npm test -- -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:unit": "npm test -- -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests"
  },
  "author": "Gabriel Fabian",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.5.0",
    "nodemon": "^2.0.16",
    "swagger-ui-express": "^4.4.0",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
